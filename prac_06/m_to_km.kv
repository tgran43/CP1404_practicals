BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48
            on_text: app.handle_convert(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 48
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 48
                on_press: app.handle_increment(-1)

    Label:
        text: ''
        font_size: 48
        id: output_label